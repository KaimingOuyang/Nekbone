#!/bin/bash
# Nek5000 build config file
# (c) 2008,2009,2010 UCHICAGO ARGONNE, LLC

# source path 
SOURCE_ROOT="$HOME/ANL/app/Nekbone/src"

# Fortran compiler
#F77="mpefc"
#F77="tau_f77.sh"
F77="mpif90"

# C compiler
#CC="mpecc"
#CC="tau_cc.sh"
CC="mpicc"

# pre-processor symbol list 
# (set PPLIST=? to get a list of available symbols)
# NEKCOMM, NEKDLAY, BG, MGRID
#PPLIST="?"


# OPTIONAL SETTINGS
# -----------------

# enable MPI (default true)
#IFMPI="false"

# auxilliary files to compile
# NOTE: source files have to located in the same directory as makenek
#       a makefile_usr.inc has to be provided containing the build rules 
#USR="foo.o"

# linking flags
#USR_LFLAGS="-mpilog -pthread"
USR_LFLAGS="-lopenblas"

# generic compiler flags
G="-DBLAS_MXM -mcmodel=medium"

# optimization flags
OPT_FLAGS_STD="-O3"
#OPT_FLAGS_MAG=""

###############################################################################
# DONT'T TOUCH WHAT FOLLOWS !!!
###############################################################################
# assign version tag
mver=1
# overwrite source path with optional 2nd argument
if [ -d $2 ] && [ $# -eq 2 ]; then
  SOURCE_ROOT="$2"
  echo "change source code directory to: ", $SOURCE_ROOT
fi
# do some checks and create makefile
source $SOURCE_ROOT/makenek.inc
# compile
make -j 1 -f makefile 2>&1 | tee compiler.out
exit 0
